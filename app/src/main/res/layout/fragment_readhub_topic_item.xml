<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_title"
            android:textSize="18sp"
            tools:text="微软 Q1 云计算业务高速增长，Windows 最赚钱，PC 软件生态日益糟糕" />

        <com.github.deskid.focusreader.widget.ReadMoreTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/text_sub"
            android:textSize="14sp"
            app:trimCollapsedText="@string/show_all_content"
            app:trimExpandedText="@string/hide_content"
            tools:text="北京时间 10 月 27 日早间消息，2015 年，微软 CEO 萨提亚 · 纳德拉（Satya Nadella）曾经立下誓言，他将带领这家老迈的科技先锋重塑自我，优先发展云计算业务 ... 他当时还承诺将把云计算营收扩大为当时的 3 倍，到 2018 年实现 200 亿美元的年化营收 ... 微软刚刚发布的第一财季业绩显示，该公司已经超出了年化 200 亿美元的目标。" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/text_white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/instant_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/text_title"
                    android:textSize="12sp"
                    tools:text="腾讯科技" />

                <TextView
                    android:id="@+id/publish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_sub"
                    android:textSize="10sp"
                    tools:text="1小时前" />

            </LinearLayout>

            <TextView
                android:id="@+id/add_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/share"
                android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="收藏"
                android:textColor="@color/colorGray" />

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="分享"
                android:textColor="@color/colorGray" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>